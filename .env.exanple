# Server Configuration
PORT=3001
NODE_ENV=production
ALLOWED_ORIGINS=https://selsi.io,http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://user:pass@postgres:5432/selsila_airdrop
DB_HOST=postgres
DB_PORT=5432
DB_NAME=selsila_airdrop
DB_USER=selsila
DB_PASSWORD=your_secure_password_here

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_here

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
TREASURY_PRIVATE_KEY=your_encrypted_private_key_here
MIN_WITHDRAWAL_AMOUNT=0.001

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0
REDIS_TTL=3600

# Email Configuration
RESEND_API_KEY=your_resend_api_key

# Security
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000